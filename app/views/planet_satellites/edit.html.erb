<%= form_with url: "/planets/#{@current_planet.id}/satellites/#{@current_satellite.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %> <br>
  <%= form.text_field :name, :value => params[:name] %><br><br>

  <%= form.label :discovery_year %> <br>
  <%= form.text_field :discovery_year, :value => params[:discovery_year] %><br><br>

  <%= form.label :artificial %><br>
  <%= form.select :artificial, options_for_select([true,false]) %><br><br>

  <%= form.submit "Update #{@current_satellite.name}" %>
<% end %>
